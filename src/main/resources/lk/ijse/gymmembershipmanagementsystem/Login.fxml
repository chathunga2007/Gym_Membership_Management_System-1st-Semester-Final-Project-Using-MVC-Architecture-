            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-text" text="FLEX GYM">
                     <font>
                        <Font name="System Bold" size="48.0" />
                     </font>
                  </Text>
                  <Text fill="#eeeeee" strokeType="OUTSIDE" strokeWidth="0.0" text="Your Fitness Journey Starts Here">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Text>
               </children>
            </VBox>

            <VBox spacing="20.0">
               <children>
                  <TextField fx:id="userNameField" prefHeight="55.0" promptText="Enter User Name" styleClass="input-field" />
